<html>
<head>
<% include ./headerHtml.ejs %>
</head>
<body>
<% include ./header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">

            <div class="bs-component">
                <label class="label label-info" data-toggle="modal" data-target="#addUserForm" id="btnAaddUserForm">추가</label>
                <table class="table table-striped table-hover ">
                <colgroup><col width="10%"><col width="20%"><col width="25%"><col width="25%"><col width="20%"></colgroup>
                <thead>
                    <tr class="active">
                    <th>번호</th>
                    <th>아이디</th>
                    <th>이름</th>
                    <th>등록일</th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>
                <% users.forEach(function(user, index) { %>
                    <tr>
                    <td><%=index+1%></td>
                    <td><%=user.userid%></td>
                    <td><%=user.username%></td>
                    <td><%=moment(user.published_date).format("YYYY-MM-DD")%></td>
                    <td>
                        <label class="label label-info modifyUser" data-id="<%=user._id%>">수정</label>
                        <label class="label label-danger deleteUser" data-id="<%=user._id%>">삭제</label>
                    </td>
                    </tr>
                <% }) %>
                </tbody>
                </table> 
            </div>
        </div>

    </div>

    <div class="modal fade" id="addUserForm">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">User Form</h4>
        </div>
        <div class="modal-body">
            <form class="form-horizontal" id="userform">
                <input type="hidden" name="_id" id="_id">
                <fieldset>
                <div class="form-group">
                    <label for="userid" class="col-lg-2 control-label">User ID</label>
                    <div class="col-lg-10">
                    <input type="text" class="form-control" id="userid" placeholder="User ID">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-lg-2 control-label">Password</label>
                    <div class="col-lg-10">
                    <input type="password" class="form-control" id="password" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <label for="username" class="col-lg-2 control-label">User Name</label>
                    <div class="col-lg-10">
                    <input type="text" class="form-control" id="username" placeholder="User Name">
                    </div>
                </div>
                </fieldset>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="btnAddUser">Save changes</button>
        </div>
        </div>
    </div>
    </div>

    <% include ./footer.ejs %>


</div>

    <script type="text/javascript">
    $(document).ready(function() {
        $(document).on("click", "#btnAddUser", function() {
            if ($("#_id").val())
                setUserDate("userModify");
            else
                setUserDate("userNew");
        });

        function setUserDate(act) {
            var sendinfo = {};
            
            if (act == "userModify") {
                sendinfo.acturl = "/addUser/" + $("#_id").val();
                sendinfo.type = "put";
                sendinfo.userdata = JSON.stringify({ "_id" : $("#_id").val(), "userid" : $("#userid").val(), "username" : $("#username").val(), "password" : $("#password").val() });
            } else {
                sendinfo.acturl = "/addUser";
                sendinfo.type = "post";
                sendinfo.userdata = JSON.stringify({ "userid" : $("#userid").val(), "username" : $("#username").val(), "password" : $("#password").val() });
            }
            $.ajax({
                url : sendinfo.acturl,
                type : sendinfo.type,
                data : sendinfo.userdata,
                contentType: 'application/json',
                datatype : 'json',
                success : function(res) {
                    location.reload();
                },
                error: function(req, msg, err) {
                    console.log(req);
                    console.log(msg);
                    console.log(err);
                }
            });

            $(".modal-title").html("User Form");
            $("#addUserForm").modal('toggle');
        }
        
        $(document).on("click", ".deleteUser", function() {
            if(confirm("선택하신 사용자를 삭제 하시겠습니까")) {
                $.ajax({
                    url : "/deleteUser/" + $(this).data("id"),
                    type : "delete",
                    contentType: 'application/json',
//                    data : JSON.stringify({ _id : $(this).data("id") }),
                    datatype : 'json',
                    success : function(res) {
                        location.reload();
                    },
                    error: function(req, msg, err) {
                        console.log(req);
                        console.log(msg);
                        console.log(err);
                    }
                });
            }
        });

        $(document).on("click", ".modifyUser", function() {
            $("#userform")[0].reset();
            $(".modal-title").html("User Form - modify");
            $.ajax({
                url : "/getUser/" + $(this).data("id"),
                type : "get",
                contentType: 'application/json',
                datatype : 'json',
                success : function(res) {
                    $("#username").val(res.username);
                    $("#userid").val(res.userid);
                    $("#_id").val(res._id);
                },
                error: function(req, msg, err) {
                    console.log(req);
                    console.log(msg);
                    console.log(err);
                }
            });

            $(".modal-title").html("User Form - modify");
            $("#addUserForm").modal();
        });
        $(document).on("click", "#btnAaddUserForm", function() {
            $("#userform")[0].reset();
            $("#_id").val("");
            $(".modal-title").html("User Form - new");
        });
       
    });
    </script>
</body>
</html>