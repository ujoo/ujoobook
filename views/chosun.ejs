<html>
<head>
<%- include('./headerHtml.ejs') %>
</head>
<body>
<%- include('./header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">

            <div class="bs-component">
                <table class="table table-striped table-hover ">
                <tbody>
                    <tr>
                        <td>
                            <%=moment().format("YYYY-MM-DD")%>일자 <%=title%>
                        </td>
                    </tr>
                    <% news.forEach(function(item, index) { %>
                        <tr>
                            <td><%=item.TITLE%> - <%=item.PUBDATE%></td>
                        </tr>
                        <tr style="height: 150px;">
                            <td>
                                <% if (item.THUMBNAIL != "") { %>
                                <div style="position: absolute;max-width: 100px;max-height: 150px;"><img src="<%=item.THUMBNAIL%>"  style="max-width: 100px;max-height: 150px;"></div>
                                <% } %>
                                <div style="<%if (item.THUMBNAIL != "") {%>margin-left: 105px;<%}%>">
                                    <%=item.SUMMARY%>
                                    <a href="http://m.chosun.com/svc/article.html?contid=<%=item.ID%>" target="_blank">원문보기</a>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
                </table> 
            </div>
        </div>

    </div>

    <%- include('./footer.ejs') %>


</div>

    <script type="text/javascript">
        // $(document).ready(function() {
        // });
    </script>
</body>
</html>