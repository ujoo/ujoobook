<html>
<head>
<% include ./headerHtml.ejs %>
</head>
<style>
.pdfobject-container { height: 800px;}
.pdfobject { border: 1px solid #666; }
#pubdate { width:80px; }
#pubdatePageNo { width:30px; }
</style>
<body>
<% include ./header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">

            <div class="bs-component">
                <table class="table table-striped table-hover ">
                <tbody>
                    <tr>
                        <td>
                            <%=title%>
                            <%=pubdate%>일자
                            <br>
                            <% if (pdfFile != "") { %>
                            <a href="file:///D:/workspace/nodejs/ujoobook<%=pdfFile%>" target="_blank">지면보기</a>
                            <% } %>
                        </td>
                    </tr>
                    <%
                    if (articlesLength > 0 || pdfFile != "") {
                        articles.forEach(function(news, index) { %>
                            <tr>
                            <td><a href="?mseq=<%=news.mseq%>&mnm=<%=news.mnm%>&pseq=<%=news.pseq%>&pubdate=<%=news.pdt%>"><%=news.pnm%> pdf 저장하기 <img src="<%=news.cover120%>"></a></td>
                            </tr>
                    <% })
                    } else { %>
                    <tr>
                    <td>등록된 신문이 없습니다.</td>
                    </tr>
                    <% }%>
                </tbody>
                </table> 
            </div>
        </div>

    </div>

    <% include ./footer.ejs %>

</div>

    <script type="text/javascript">
        $(document).ready(function() {
        });
    </script>
</body>
</html>