<html>
<head>
<%- include('./headerHtml.ejs') %>
</head>
<style>
.pdfobject-container { height: 800px;}
.pdfobject { border: 1px solid #666; }
#pubdate { width:80px; }
#pubdatePageNo { width:30px; }
</style>
<body>
<%- include('./header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">

            <div class="bs-component">
                <table class="table table-striped table-hover ">
                <tbody>
                    <tr>
                        <td>
                            <input type="text" name="pubdate" id="pubdate" value="<%=pubdate%>">일자
                            <input type="text" name="pubdatePageNo" id="pubdatePageNo" value="<%=pubdatePageNo%>">페이지
                            <%=title%>
                            <span class="btn btn-info" id="btnNewsView">보기</span>
                            <br>
                            <a href="<%=pdfFile%>" target="_blank">지면보기</a>
                        </td>
                    </tr>
                    <tr>
                        <td><div id="example1"></div></td>
                    </tr>
                </tbody>
                </table> 
            </div>
        </div>

    </div>

    <%- include('./footer.ejs') %>

</div>

    <script type="text/javascript">
        $(document).ready(function() {
            $(document).on("click", "#btnNewsView", function() {
                location.href = "/digitaltimes?pubdate=" + $("#pubdate").val() + "&pubdatePageNo=" + $("#pubdatePageNo").val();
            });
        });
    </script>
</body>
</html>